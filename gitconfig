# include requires git 1.7.10+ or some such
[include]
	path = .gitconfig-user
	path = .gitconfig-github
  path = .gitconfig.host
[color]
	ui = true
[push]
	# not supported in git 1.7.x
	#default = simple
	default = current
[alias]
	st = status -sb
	co = checkout
	br = branch
	l = log --pretty=oneline --stat --decorate
	la = !git config -l | grep alias | cut -c 7-
	fixup = commit --amend --no-edit
	reword = commit --amend
	last = diff --cached HEAD^
	alias = "!f() { git config --global alias.$1 \"$2\"; }; f"
	unalias = "!f() { git config --global --unset alias.$1; }; f"
	pf = push --force
	this = diff --staged
